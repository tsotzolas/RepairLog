<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tsotzolas.ps.com.repairlog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@drawable/car_repair_blue_256"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication">
        <uses-feature
            android:name="android.hardware.camera"
            android:required="true" />

        <activity
            android:name=".MainActivity"

            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:configChanges="orientation|screenSize">

        </activity>

        <activity android:name=".ChooseToInsertActivity">

        </activity>

        <activity android:name=".VehicleView">

        </activity>

        <activity
            android:name=".InsertCarActivity"

            android:screenOrientation="user"
       />
        <!--android:configChanges="orientation|keyboardHidden|screenSize"-->


        <activity android:name=".InsertMotoActivity"/>

    </application>

</manifest>