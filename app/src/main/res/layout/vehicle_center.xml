<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroung"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tsotzolas.ps.com.repairlog.VehicleCenter"
    tools:showIn="@layout/app_bar_main1"
    android:weightSum="1">

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addNewRepair"
        android:text="Add new repair"
        android:layout_weight="2.38" />


    <ListView
        android:id="@+id/vehicleList1"
        android:layout_width="376dp"
        android:layout_height="522dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"

        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintVertical_bias="0.156" />
</LinearLayout>