<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroung"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tsotzolas.ps.com.repairlog.MainActivity"
    tools:showIn="@layout/app_bar_main">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_information"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.065"
                android:layout_marginTop="8dp" />


            <ImageButton
                android:id="@+id/imageButtonCar"
                android:layout_width="122dp"
                android:layout_height="113dp"
                android:background="@drawable/ic_car_24dp"
                android:layout_marginLeft="16dp"
                android:onClick="carSelected"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imageButtonMoto"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.311"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                tools:ignore="ContentDescription,RtlHardcoded"
                android:contentDescription=""
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonCar"
                app:layout_constraintVertical_bias="0.792" />

            <ImageButton
                android:id="@+id/imageButtonMoto"
                android:layout_width="103dp"
                android:layout_height="113dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/ic_motorcycle_dp"
                android:onClick="motoSelected"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="106dp"
                tools:ignore="ContentDescription,RtlHardcoded"
                android:contentDescription=""
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonCar"
                app:layout_constraintVertical_bias="0.696" />



            <Button
                android:id="@+id/buttonCar"
                android:layout_width="192dp"
                android:layout_height="114dp"
                android:layout_marginTop="8dp"
                android:text="@string/see_your_vehicles"
                android:onClick="carSelected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.69"
                android:layout_marginLeft="88dp"
                app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
